<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/magenta_fuchsia"
                android:endColor="@color/electric_violet" />
            <stroke
                android:width="1dp"
                android:color="@color/purple_heart" />
            <corners
                android:radius="50dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/electric_violet"
                android:endColor="@color/magenta_fuchsia" />
            <stroke
                android:width="1dp"
                android:color="@color/purple_heart" />
            <corners
                android:radius="50dp" />
        </shape>
    </item>
</selector>
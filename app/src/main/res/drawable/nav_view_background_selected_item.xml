<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="@color/purple_heart"
                android:endColor="@color/mauve"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/purple_heart" />
            <corners
                android:radius="50dp" />
            <padding
                android:bottom="5dp"
                android:left="50dp"
                android:right="50dp"
                android:top="5dp" />
        </shape>
    </item>
    <item android:state_pressed="false"
        android:state_checked="true" >
        <shape>
            <gradient
                android:startColor="@color/purple_heart"
                android:endColor="@color/mauve"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/purple_heart" />
            <corners
                android:radius="50dp" />
            <padding
                android:bottom="5dp"
                android:left="50dp"
                android:right="50dp"
                android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" />
            <corners
                android:radius="50dp" />
            <padding
                android:bottom="5dp"
                android:left="50dp"
                android:right="50dp"
                android:top="5dp" />
        </shape>
    </item>
</selector>